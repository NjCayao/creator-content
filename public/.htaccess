# Archivo: /creator/public/.htaccess
# Prop√≥sito: Reglas de seguridad para la carpeta public

# Prevenir listado de directorios
Options -Indexes

# Denegar acceso a archivos sensibles
<FilesMatch "\.(sql|log|ini|conf|env|git)$">
    Order allow,deny
    Deny from all
</FilesMatch>

